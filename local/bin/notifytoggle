# Last modified: Thu 29 Sep 2022 22:31:14
# Version: 1.0
#
# Description: toggle 'do not disturb' mode on and off
#=========================================================================

if type dunst >/dev/null 2>&1; then
	status=$(dunstctl is-paused)
	if [ "$status" = true ]; then
		dunstctl set-paused toggle && notify-send "ğŸ—¨ï¸ Do Not Disturb OFF" "Notifications are now shown again"
	else
		notify-send "ğŸ—¨ï¸ Do Not Disturb ON" "Notifications will be hidden & queued" && sleep 5 && dunstctl set-paused toggle
	fi
fi
