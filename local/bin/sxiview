##=======================
## Prerequisites
##=======================
#if ! type sxiv >/dev/null 2>&1; then
#	notify-send "‚ùó Error" "SXIV is not installed"
#	printf "Error: SXIV is not installed!"
#	exit 1
#fi

#=======================
# Wrapper
#=======================
if [ ! -d "$1" ]; then
	file=$(readlink -f "$1")
	directory=$(readlink -f "$1" | sed 's:[^/]*$::')
	sxiv -q "$file" "$directory"
fi
