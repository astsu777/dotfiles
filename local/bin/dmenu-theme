	kittyTheme="doomone_theme"

	# VIM
	vimColorscheme="doom-one"
	vimLightline="jellybeans"

	# BSPWM
	BSPWMBackground="#282c34"
	BSPWMForeground="#bbc2cf"
	BSPWMBar="#c678dd"
	BSPWMActiveBorder="#98be65"
	BSPWMNormalBorder="#282c34"

	# DWM
	DWMBackground="#282c34"
	DWMForeground="#bbc2cf"
	DWMBarFG="#282c34"
	DWMBarBG="#c678dd"
	DWMNormalBorder="#282c34"
	DWMActiveBorder="#98be65"

	# i3
	I3Background="#282c34"
	I3Foreground="#bbc2cf"
	I3Bar="#c678dd"
	I3ActiveBorder="#98be65"
	I3NormalBorder="#282c34"
	I3Indicator="#51afef"

	# Rofi
	rofiTheme="doomone_theme"

	# TMUX
	tmuxTheme="doomone_theme"
}

#=======================
# Spaceduck Theme
#=======================

toggleSpaceduck() {
	# ST/Xresources
	foreground="#ecf0c1"
	background="#0f111b"
	normalBlack="#000000"
	normalRed="#e33400"
	normalGreen="#5ccc96"
	normalYellow="#b3a1e6"
	normalBlue="#00a3cc"
	normalMagenta="#ce6f8f"
	normalCyan="#7a5ccc"
	normalWhite="#686f9a"
	brightBlack="#686f9a"
	brightRed="#e33400"
	brightGreen="#5ccc96"
	brightYellow="#b3a1e6"
	brightBlue="#00a3cc"
	brightMagenta="#ce6f8f"
	brightCyan="#7a5ccc"
	brightWhite="#ecf0c1"

	# Alacritty
	alacrittyTheme="spaceduck_theme"

	# Kitty
	kittyTheme="spaceduck_theme"

	# VIM
	vimColorscheme="spaceduck"
	vimLightline="spaceduck"

	# BSPWM
	BSPWMBackground="#0f111b"
	BSPWMForeground="#ecf0c1"
	BSPWMBar="#2b885b"
	BSPWMActiveBorder="#2b885b"
	BSPWMNormalBorder="#0f111b"

	# DWM
	DWMBackground="#0f111b"
	DWMForeground="#ecf0c1"
	DWMBarFG="#ecf0c1"
	DWMBarBG="#2b885b"
	DWMNormalBorder="#0f111b"
	DWMActiveBorder="#2b885b"

	# i3
	I3Background="#0f111b"
	I3Foreground="#d7d7d7"
	I3Bar="#2b885b"
	I3ActiveBorder="#2b885b"
	I3NormalBorder="#0f111b"
	I3Indicator="#00a3cc"

	# Rofi
	rofiTheme="spaceduck_theme"

	# TMUX
	tmuxTheme="spaceduck_theme"
}

#=======================
# PREREQUISITES
#=======================

checkReq

#=======================
# LIST THEMES
#=======================

if ! type dmenu > /dev/null 2>&1; then
	case "$(printf "Custom\\nCustom 2\\nDoom-One\\nDracula\\nGruvbox\\nSolarized Light\\nNord\\nOnedark\\nSpaceduck" | sort | fzf -i --prompt "Choose a theme:")" in
		"Custom") toggleCustom ;;
		"Custom 2") toggleCustom2 ;;
		"Doom-One") toggleDoomone ;;
		"Dracula") toggleDracula ;;
		"Gruvbox") toggleGruvbox ;;
		"Nord") toggleNord ;;
		"Onedark") toggleOnedark ;;
		"Solarized Light") toggleSolarizedLight ;;
		"Spaceduck") toggleSpaceduck ;;
		*) exit 0 ;;
	esac
else
	case "$(printf "Custom\\nCustom 2\\nDoom-One\\nDracula\\nGruvbox\\nSolarized Light\\nNord\\nOnedark\\nSpaceduck" | sort | dmenu -l 30 -i -p "Choose a theme:")" in
		"Custom") toggleCustom ;;
		"Custom 2") toggleCustom2 ;;
		"Doom-One") toggleDoomone ;;
		"Dracula") toggleDracula ;;
		"Gruvbox") toggleGruvbox ;;
		"Nord") toggleNord ;;
		"Onedark") toggleOnedark ;;
		"Solarized Light") toggleSolarizedLight ;;
		"Spaceduck") toggleSpaceduck ;;
		*) exit 0 ;;
	esac
fi

#=======================
# CHANGE THEME
#=======================

setVIM
setAlacritty
setKitty
setST
setXTerm
setBSPWM
setDWM
seti3
setRofi
setTMUX
notify "🖌️ Theme Installed" "Please reload your WM to apply new theme (or reboot)"
