#!/bin/bash
while true; do
	dwmdisk > /tmp/dwmdisk.txt
	sleep 3s
	if type newsboat > /dev/null 2>&1; then dwmnews > /tmp/dwmnews.txt ; fi
	sleep 3s && if type curl > /dev/null 2>&1; then dwmweather > /tmp/dwmweather.txt ; fi
	dwmupdates > /tmp/dwmupdates.txt
	sleep 3600s
done &

while true; do
	VOL="$(dwmvol)"
	CPU="$(dwmcpu)"
	RAM="$(dwmmemory)"
	NET="$(dwmnet)"
	TEMP="$(dwmtemp)"
	CLOCK="$(dwmclock)"
	BATTERY="$(dwmbattery)"
	UPDATES="$(< /tmp/dwmupdates.txt)"
	DISK="$(< /tmp/dwmdisk.txt)"
	NEWS="$(< /tmp/dwmnews.txt)"
	WEATHER="$(< /tmp/dwmweather.txt)"
	if [ -f /sys/class/power_supply/BAT?*/charge_now ] && [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && grep 'C' /tmp/dwmweather.txt > /dev/null 2>&1; then
		xsetroot -name " $UPDATES| $NEWS| $CPU| $RAM| $NET| $DISK| $TEMP| $BATTERY| $VOL| $WEATHER| $CLOCK"
	elif [ -f /sys/class/power_supply/BAT?*/charge_now ] && [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
		xsetroot -name " $UPDATES| $NEWS| $CPU| $RAM| $NET| $DISK| $TEMP| $BATTERY| $VOL| $CLOCK"
	elif sensors | grep temp > /dev/null 2>&1 && [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && grep 'C' /tmp/dwmweather.txt > /dev/null 2>&1; then
		xsetroot -name " $UPDATES| $NEWS| $CPU| $RAM| $NET| $DISK| $TEMP| $VOL| $WEATHER| $CLOCK"
	elif sensors | grep temp > /dev/null 2>&1 && [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
		xsetroot -name " $UPDATES| $NEWS| $CPU| $RAM| $NET| $DISK| $TEMP| $VOL| $CLOCK"
	elif [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && grep 'C' /tmp/dwmweather.txt > /dev/null 2>&1; then
		xsetroot -name " $UPDATES| $NEWS| $CPU| $RAM| $NET| $DISK| $VOL| $WEATHER| $CLOCK"
	elif [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
		xsetroot -name " $UPDATES| $NEWS| $CPU| $RAM| $NET| $DISK| $VOL| $CLOCK"
	elif [ -f /tmp/dwmupdates.txt ]; then
		xsetroot -name " $UPDATES| $CPU| $RAM| $NET| $DISK| $VOL| $CLOCK"
	else
		xsetroot -name " $CPU| $RAM| $NET| $DISK| $VOL| $CLOCK"
	fi
	sleep 1s
done &