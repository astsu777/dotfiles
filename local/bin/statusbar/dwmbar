#!/usr/bin/env bash
#===================================================
# Author: Gaetan (gaetan@ictpourtous.com)
# Creation: Sun Aug 2021 11:17:11
# Last modified: Sun Aug 2021 11:17:11
# Version: 1.0
#
# Description: DWM status bar script
#===================================================

#=======================
# Modules running every hour
#=======================
while true; do
	dwmdisk > /tmp/dwmdisk.txt
	sleep 10s
	if curl -s --max-time 1 http://example.com/ > /dev/null 2>&1; then
		if type newsboat > /dev/null 2>&1; then dwmnews > /tmp/dwmnews.txt ; fi
		if type curl > /dev/null 2>&1 && dwmweather | grep '[0-9]' > /dev/null 2>&1; then dwmweather > /tmp/dwmweather.txt ; fi
	fi
	dwmupdates > /tmp/dwmupdates.txt
	sleep 3600s
done &

#=======================
# Modules running every two seconds
#=======================
while true; do
	if sensors | grep temp > /dev/null 2>&1 && [ -f /sys/class/power_supply/BAT?*/charge_now ]; then
		if [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && [ -f /tmp/dwmweather.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmtemp)| $(dwmbattery)| $(dwmvol)| $(< /tmp/dwmweather.txt)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmtemp)| $(dwmbattery)| $(dwmvol)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmtemp)| $(dwmbattery)| $(dwmvol)| $(dwmclock)"
		else
			xsetroot -name " $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(dwmclock)"
		fi
	elif sensors | grep temp > /dev/null 2>&1; then
		if [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && [ -f /tmp/dwmweather.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmtemp)| $(dwmvol)| $(< /tmp/dwmweather.txt)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmtemp)| $(dwmvol)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmtemp)| $(dwmvol)| $(dwmclock)"
		else
			xsetroot -name " $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(dwmclock)"
		fi
	elif [ -f /sys/class/power_supply/BAT?*/charge_now ]; then
		if [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && [ -f /tmp/dwmweather.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmbattery)| $(dwmvol)| $(< /tmp/dwmweather.txt)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmbattery)| $(dwmvol)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmbattery)| $(dwmvol)| $(dwmclock)"
		else
			xsetroot -name " $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(dwmclock)"
		fi
	else
		if [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ] && [ -f /tmp/dwmweather.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(< /tmp/dwmweather.txt)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ] && [ -f /tmp/dwmnews.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(< /tmp/dwmnews.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(dwmclock)"
		elif [ -f /tmp/dwmupdates.txt ]; then
			xsetroot -name " $(< /tmp/dwmupdates.txt)| $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(dwmclock)"
		else
			xsetroot -name " $(dwmcpu)| $(dwmmemory)| $(dwmnet)| $(dwmdisk)| $(dwmvol)| $(dwmclock)"
		fi
	fi
	sleep 2s
done &