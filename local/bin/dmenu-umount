#!/usr/bin/env sh
#=========================================================================
# Author: Gaetan (gaetan@ictpourtous.com) - Twitter: @GaetanICT
# Creation: Sun 22 Aug 2021 12:14:10
# Last modified: Sun 22 Aug 2021 12:14:15
# Version: 1.0
#
# Description: DMenu prompt to unmount drives.
#=========================================================================

unmountusb() {
	[ -z "$drives" ] && exit
	chosen="$(echo "$drives" | dmenu -i -p "Unmount which drive?")" || exit 1
	chosen="$(echo "$chosen" | awk '{print $1}')"
	[ -z "$chosen" ] && exit
	sudo -A umount "$chosen" && notify-send "ðŸ’» USB unmounting" "$chosen unmounted"
	}

unmountandroid() { \
	chosen="$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -i -p "Unmount which device?")" || exit 1
	[ -z "$chosen" ] && exit
	sudo -A umount -l "$chosen" && notify-send "ðŸ¤– Android unmounting" "$chosen unmounted"
	}

asktype() { \
	choice="$(printf "USB\\nAndroid" | dmenu -i -p "Unmount a USB drive or Android device?")" || exit 1
	case "$choice" in
		USB) unmountusb ;;
		Android) unmountandroid ;;
	esac
	}

drives=$(lsblk -nrpo "name,type,size,mountpoint" | awk '!/\/efi/' | awk '$4!~/\/boot|\/home$|SWAP/&&length($4)>1{printf "%s (%s)\n",$4,$3}')

if ! grep simple-mtpfs /etc/mtab; then
	[ -z "$drives" ] && notify-send "No drives to unmount" &&  exit
	notify-send "Unmountable USB drive detected"
	unmountusb
else
	if [ -z "$drives" ]
	then
		notify-send "Unmountable Android device detected"
	       	unmountandroid
	else
		notify-send "Unmountable USB drive(s) and Android device(s) detected"
		asktype
	fi
fi
