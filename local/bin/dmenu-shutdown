#!/usr/bin/env sh
#===================================================
# Author: Gaetan (gaetan@ictpourtous.com)
# Creation: Sat Aug 2021 21:24:17
# Last modified: Sat Aug 2021 21:24:17
# Version: 1.0
#
# Description: logout/shutdown/reboot the system
#===================================================
OPTS=$(printf "Lock Screen\nDisable Lock on Idle\nEnable Lock on Idle\nLogout\nSuspend\nHibernate\nReboot\nShutdown" | sort | dmenu -i -p "Logout/Shutdown:")
case $OPTS in
	"Lock Screen") slock ;;
	"Disable Lock on Idle") pkill xautolock ;;
	"Enable Lock on Idle") pgrep xautolock || xautolock -secure -detectsleep -time 10 -locker slock & ;;
	Logout) xdotool key "super+shift+q" ;;
	Suspend) systemctl suspend ;;
	Hibernate) systemctl hibernate || loginctl hibernate ;;
	Reboot) systemctl reboot || loginctl reboot ;;
	Shutdown) systemctl poweroff || loginctl poweroff ;;
	*) ;;
esac